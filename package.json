{
  "name": "ecmarkdown",
  "version": "3.0.9",
  "description": "A compiler for \"Ecmarkdown\" algorithm shorthand into HTML.",
  "main": "lib/ecmarkdown.js",
  "types": "lib/ecmarkdown.d.ts",
  "scripts": {
    "test": "mocha --reporter dot test/tokenizer.js test/parser.js && node test/run-cases.js",
    "lint": "eslint lib test",
    "format": "prettier --write lib test"
  },
  "repository": "https://github.com/tc39/ecmarkdown",
  "keywords": [
    "ecmascript",
    "javascript",
    "specs",
    "typography",
    "markup",
    "markdown",
    "html",
    "code"
  ],
  "files": [
    "lib/*.js",
    "lib/*.d.ts"
  ],
  "dependencies": {
    "escape-html": "^1.0.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "inline-elements": "^1.0.0",
    "js-beautify": "1.5.5",
    "mocha": "^2.2.5",
    "prettier": "^2.0.4"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100
  },
  "author": "Domenic Denicola <d@domenic.me> (https://domenic.me/)",
  "contributors": [
    "Domenic Denicola <d@domenic.me> (https://domenic.me/)",
    "Brian Terlson <brian.terlson@microsoft.com> (https://github.com/bterlson)"
  ],
  "license": "WTFPL"
}
